@model GestorPacientes.Core.Application.ViewModels.ResultadoLaboratorios.EditResultadoLaboratorioViewModel

@{
    ViewData["Title"] = "Reportar Resultado de Laboratorio";
}

<h2>Reportar Resultado de Laboratorio</h2>

<form asp-action="Reportar" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Campos ocultos para mantener la información necesaria -->
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CitaId" />
    <input type="hidden" asp-for="PruebaLaboratorioId" />
    <input type="hidden" asp-for="ConsultorioId" />
    <input type="hidden" asp-for="Estado" />

    <div class="form-group">
        <label asp-for="Resultado" class="control-label"></label>
        <textarea asp-for="Resultado" class="form-control"></textarea>
        <span asp-validation-for="Resultado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Finalizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
