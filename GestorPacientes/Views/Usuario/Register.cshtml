
@using GestorPacientes.Core.Application.ViewModels.Registers;
@model RegisterViewModel
@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>Creando un nuevo usuario</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Usuario" asp-action="Register">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre:</label>
                        <input type="text" asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label">Apellido:</label>
                        <input type="text" asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                   
                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label">Correo:</label>
                        <input type="text" asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NombreUsuario" class="form-label">Nombre de Usuario:</label>
                        <input type="text" asp-for="NombreUsuario" class="form-control" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NombreConsultorio" class="form-label">Nombre de Consultorio:</label>
                        <input type="text" asp-for="NombreConsultorio" class="form-control" />
                        <span asp-validation-for="NombreConsultorio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Contrasena" class="form-label">Contraseña:</label>
                        <input type="text" asp-for="Contrasena" class="form-control" />
                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmarContrasena" class="form-label">Confirmar Contraseña:</label>
                        <input type="text" asp-for="ConfirmarContrasena" class="form-control" />
                        <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                    </div>

                   

                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a asp-controller="Usuario" asp-action="Login" class="btn btn-warning">Volver atrás</a>
                </form>
            </div>
        </div>
    </div>
</div>


