@model GestorPacientes.Core.Application.ViewModels.PruebaLaboratorios.SavePruebaLaboratorioViewModel
@{
    ViewData["Title"] = "Crear Prueba Laboratorio";
}

<div class="container mt-4">
    <h2>Crear Prueba de Laboratorio</h2>
    <form asp-action="Create" method="post">
        <!-- Muestra errores de validación -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Crear Prueba</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>

